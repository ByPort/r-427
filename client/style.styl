@import url('../node_modules/bootstrap/dist/css/bootstrap.min.css');

html, body, main
    height: 100%;

.app
    min-height: 100%;
    //background-color: #f0f0f0

.navbar {
    border-radius: 0 !important;
    border: none !important;
    margin-bottom: 0;
    background-color: transparent;
    font-size: 1.5em;
    .container {
      width: 100%;
      padding: 0;
    }
    .nav.navbar-nav {
        display: flex;
        width: 100%;
        li {
            border: 2px solid #fff;
            border-radius: 8px;
            flex-grow: 1;
            margin: 4px;
            text-align: center;
            a {
                color: #fff;
            }
            &:hover {
                a {
                    color: #aaa;
                }
                border-color: #aaa;
            }
        }
    }
}

.navbar-brand
    font-weight: bold;
    color: #fff !important;

.navbar-nav
    width: 100%;
    display: flex;
    justify-content: center;

.pre-header {
    background-color: #222;
    padding-top: 20px;
    color: #9d9d9d !important;
}

.footer
    margin-top: 20px;

.title
    font-weight: bold;
    font-size: 34px;

.content
    background-color: rgba(0, 0, 0, 0.7);

.main-image
    margin: 20px;
    width: 128px;
    height: auto;

carousel-item(height) {
    .item {
        height: height !important;
        overflow: hidden;
        img {
            max-height: 100% !important;
            max-width: 100% !important;
        }
    }
}

.carousel-main {
    margin-bottom: 20px;
    width: 66.66%;
    margin: auto;
    carousel-item(500px);
}

.carousel-secondary {
    width: 100%;
    carousel-item(800px);
}

.flex {
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.page-header h1 {
    font-size: 25px !important;
}

.img-mapper-tooltip {
    position: absolute;
}

.modal-img {
    width: 100%
}

.anchor {
    animation-name: blink;
    animation-direction: normal;
    animation-duration: 1s;
    animation-iteration-count: 3;
    animation-timing-function: ease-in-out;
}
@keyframes blink {
    0% {
        background-color: rgba(255,255,255,1)
    }
    100% {
        background-color: rgba(255,255,0,.4)
    }
}

.maped-img {
    width: 100%;
}

.cable {
    height: 120px !important;
}

.faq {
    p, li {
        font-size: 18px !important;
    }
    img {
        display: block;
        margin: 10px auto;
        max-width: 100%;
    }
}

.structure {
    p {
        font-size: 18px;
    }
    img {
        max-height: 100px;
    }
}

.app
    background-image: url(assets/camouflage_texture1732.jpg);
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    color: white;

.gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    grid-gap: 4px;
    grid-auto-rows: 1fr;
    width: 100%;
}

.gallery::before {
    content: '';
    width: 0;
    padding-bottom: 100%;
    grid-row: 1 / 1;
    grid-column: 1 / 1;
}

.gallery > *:first-child {
    grid-row: 1 / 1;
    grid-column: 1 / 1;
}
